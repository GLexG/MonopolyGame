<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/game_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/board"
                android:scaleType="fitXY"
                tools:context=".Controller.BoardActivity">


    <ImageView
            android:id="@+id/d6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/d6"
            android:layout_alignTop="@+id/d5" android:layout_centerHorizontal="true"/>

    <ImageView
            android:id="@+id/d5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/d5"
            android:layout_centerVertical="true" android:layout_toEndOf="@+id/d6"/>

    <ImageView
            android:id="@+id/settings"

            android:onClick="settingsClicked"

            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/settings3"
            android:layout_marginEnd="61dp"
            android:layout_above="@+id/d5"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="34dp" />


</RelativeLayout>
